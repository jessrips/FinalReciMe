<%- include('bootheader') -%>
<%- include('menubar') -%>

<div class="jumbotron">
    <h1>ReciMe Meal Planner</h1>
    <p> This is where you can plan your meals!</p>
</div>

<h2>Plan a Meal</h2>

<form method="post" action="plannedMeals">
 Title of meal?
 <input type= "text" name= "item">
 <br>
What day are you planning to make this meal?
<input type="date" name="dateTime">
<br>
  <input type="submit" value="Add Meal">
</form>
<br>

<h2> Your Planned Meals</h2>
<% items.forEach(item => { %>
     <li>Name: <%= item.item %> Date: <%=item.dateTime %></li> ||
     <a href="/plannedMeals/remove/<%=item._id %>">remove</a>
<% }) %>

